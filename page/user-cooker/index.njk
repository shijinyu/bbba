{% extends 'mobile/base.njk' %}
{% block body %}
<div class="weui-toptips weui-toptips_warn js_tooltips" style="display: none;">错误提示</div>
<header class="page-nav">
  <h1>提交厨师备案申请</h1>
</header>
<section class="page">
  <section class="page-inner">
    <form method="POST" id="J_form" enctype="multipart/form-data" name="cooker_vaildate">
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">姓名</label></header>
          <article class="weui-cell__bd">
              <input class="weui-input" id="J_cs_name" name="cs_name" type="text" placeholder="请输入姓名" required>
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">性别</label></header>
          <article class="weui-cell__bd">
            <label>
              <input class="weui-radio" type="radio" id="J_cs_sex_1" name="cs_sex" required> 男
            </label>
            <label>
              <input class="weui-radio" type="radio" id="J_cs_sex_2" name="cs_sex" required> 女
            </label>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <div class="weui-cells__title">民族</div>
        <section class="weui-cell weui-cell_select">
          <div class="weui-cell__bd">
            <select class="weui-select" name="cs_mz" id="J_cs_mz" required>
              <option selected value="">---请选择民族---</option>
              <option>汉族</option>
              <option>回族</option>
              <option>维吾尔族</option>
              <option>蒙古族</option>
              <option>哈萨克族</option>
              <option>撒拉族</option>
              <option>东乡族</option>
              <option>保安族</option>
              <option>土族</option>
              <option>柯尔克孜族</option>
              <option>乌孜别克族</option>
              <option>满族</option>
              <option>藏族</option>
              <option>壮族</option>
              <option>苗族</option>
              <option>京族</option>
              <option>畲族</option>
              <option>其他民族</option>
            </select>
          </div>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <header class="weui-cells__title">家庭住址</header>
        <section class="weui-cell  weui-cell_select  weui-cell_select-after">
          <header class="weui-cell__hd">
            <label class="weui-label">蚌埠市</label>
          </header>
          <article class="weui-cell__bd">
            <select class="weui-select" name="cs_address_country" id="J_cs_address_1" required>
              <option selected value="">---市辖区/县---</option>
              <option>蚌山区</option>
              <option>龙子湖区</option>
              <option>禹会区</option>
              <option>淮上区</option>
              <option>怀远县</option>
              <option>固镇县</option>
              <option>五河县</option>
              <option>凤阳县</option>
            </select>
          </article>
        </section>
        <section class="weui-cell  weui-cell_select  weui-cell_select-after">
          <header class="weui-cell__hd">
            <label class="weui-label"></label>
          </header>
          <article class="weui-cell__bd">
            <select class="weui-select" name="cs_address_street" id="J_cs_address_2" required>
              <option selected value="">---乡镇/街道---</option>
              <option>燕山乡</option>
              <option>李楼乡</option>
              <option>宏业村街道</option>
            </select>
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label"></label></header>
          <article class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="XX路/村 XX号 XX幢/组 XX户" name="cs_address_detail" id="J_cs_address_3" required>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <header class="weui-cells__title">文化程度</header>
        <article class="weui-cell weui-cell_select">
          <div class="weui-cell__bd">
              <select class="weui-select"  name="cs_edu" id="J_cs_edu" required>
                <option selected value="">---请选择文化程度---</option>
                <option>小学及以下</option>
                <option>初中</option>
                <option>高中/职高</option>
                <option>大专</option>
                <option>本科</option>
                <option>硕士研究生及以上</option>
              </select>
          </div>
        </article>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">出生年月</label></header>
          <article class="weui-cell__bd">
            <input type="date" class="weui-input" name="cs_birth" id="J_cs_birth"
             pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))"
             required>
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">其他职业</label></header>
          <article class="weui-cell__bd">
              <input class="weui-input" type="text" placeholder="选填" name="cs_other_job" id="J_cs_other_job">
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">从业年限</label></header>
          <article class="weui-cell__bd">
              <input class="weui-input" type="number" name="cs_work_time" id="J_cs_work_time" placeholder="请输入年限" pattern="[-+]?[0-9]" required>
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">从业地区</label></header>
          <article class="weui-cell__bd">
              <input class="weui-input" type="text" name="cs_act_range" id="J_cs_act_range" placeholder="主要从业地区范围" required>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">身份证号</label></header>
          <article class="weui-cell__bd">
              <input class="weui-input" type="text" placeholder="请输入" name="cs_idnum" id="J_cs_idnum" pattern="^[1-9]\d{5}[1-9]\d{3}((0[1-9])|(1[0-2]))((0[1-9])|([1-2]\d)|(3[0-1]))((\d{4})|(\d{3}[Xx]))$" required>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">清真厨师</label></header>
          <article class="weui-cell__bd">
            <label>
              <input class="weui-radio" type="radio" name="cs_is_halal" value="1" id="J_cs_is_halal_1" required> 是
            </label>
            <label>
              <input class="weui-radio" type="radio" name="cs_is_halal" value="2" id="J_cs_is_halal_2" required> 否
            </label>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <div class="weui-cells__title">年度健康体检情况</div>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">健康证号</label></header>
          <article class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入" id="J_cs_health_id" name="cs_health_id" required>
          </article>
        </section>
        <section class="weui-cell">
          <header class="weui-cell__hd"><label class="weui-label">有效</label></header>
          <article class="weui-cell__bd">
            <label>
              <input class="weui-radio" type="radio" name="cs_health_valiable" id="J_cs_health_valiable_1" value="1" required> 是
            </label>
            <label>
              <input class="weui-radio" type="radio" name="cs_health_valiable" id="J_cs_health_valiable_2" value="0" required> 否
            </label>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <header class="weui-cells__title">年度食品安全培训情况</header>
        <section class="weui-cell weui-cell_select">
          <article class="weui-cell__bd">
            <select class="weui-select" name="cs_train" id="J_cs_train" required>
              <option selected="" value="">---请选择---</option>
              <option>从未培训</option>
              <option>近三个月培训</option>
              <option>近半年培训</option>
              <option>近一年培训</option>
              <option>近两年培训</option>
              <option>两年前培训</option>
            </select>
          </article>
        </section>
      </section>
      <!-- /block -->
      <!-- block -->
      <section class="weui-cells weui-cells_form">
        <div class="weui-cells__title">验证码</div>
        <div class="weui-cell weui-cell_vcode">
          <div class="weui-cell__bd">
            <input class="weui-input" name="cs_vcode" id="J_cs_vcode" type="text" placeholder="请输入验证码" required>
          </div>
          <div class="weui-cell__ft">
              <img class="weui-vcode-img" src="./images/vcode.jpg">
          </div>
        </div>
      </section>
      <!-- /block -->
      <!-- block -->
      <div class="weui-btn-area">
          <button type="button" class="weui-btn weui-btn_primary" id="J_submit"><i class="weui-loading"></i>确定</button>
      </div>
      <!-- /block -->
    </form>
  </section>
</section>
<div id="loadingToast" style="display:none;">
  <div class="weui-mask_transparent"></div>
  <div class="weui-toast">
      <i class="weui-loading weui-icon_toast"></i>
      <p class="weui-toast__content">数据加载中</p>
  </div>
</div>
{% endblock %}
