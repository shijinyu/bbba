{% extends 'blank/blank.njk' %}
{% block blank %}
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <title>蚌埠市农村集体聚餐备案系统</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
    <meta name="format-detection" content="telephone=no" />
</head>
<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="../index.html"><b>蚌埠市</b>农村集体聚餐</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
      <p class="login-box-msg">厨师备案登录</p>
        <div class="form-group has-feedback">
          <input type="text" class="form-control" placeholder="用户名" id="J_user">
          <span class="fa fa-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <input type="password" class="form-control" placeholder="密码" id="J_pwd">
          <span class="fa fa-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <input type="checkbox" class="icheckbox_square-blue iradio_square"> 记住我
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-xs-4">
            <button type="button" class="btn btn-primary btn-block btn-flat" id="J_submit">登录</button>
          </div>
          <!-- /.col -->
        </div>
      <!-- /.social-auth-links -->

      <a href="#">点击这里找回密码</a><br>
      <a href="#" class="text-center">新用户注册</a>

    </div>
    <!-- /.login-box-body -->
  </div>
  <div id="loadingToast" style="display:none;">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-loading weui-icon_toast"></i>
        <p class="weui-toast__content">正在登录...</p>
    </div>
  </div>
</body>
</html>
{% endblock %}
